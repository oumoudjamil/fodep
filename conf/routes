# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#view
GET   /recette                          controllers.HomeController.recette()
GET   /menu                             controllers.HomeController.menu()
GET   /single.html                      controllers.HomeController.single()


# Swagger API
GET   /swagger.json                     controllers.ApiHelpController.getResources
GET   /docs/                            controllers.Assets.at(path="/public/swagger-ui",file="index.html")
GET   /docs/*file                       controllers.Assets.at(path="/public/swagger-ui",file)

GET   /                                 controllers.RecetteController.getAllRecette()
GET   /getRecetteByCategorie            controllers.RecetteController.getRecetteByCategorie(id: Int)
GET   /getAllCategory                   controllers.RecetteController.getAllCategory()
POST  /addRecette                       controllers.RecetteController.addRecette()
GET   /delRecette                       controllers.RecetteController.delRecette(id: Int)
GET   /getRecette                       controllers.RecetteController.getRecettebyId(id: Int)



# Map static resources from the /public folder to the /assets URL path
GET   /assets/js/routes                 controllers.HomeController.jsRoutes()
GET   /assets/*file                     controllers.Assets.versioned(path="/public", file)
